@using System.Configuration

@{
    Layout = "~/Views/Shared/_LayoutAuthenticated.cshtml";
    ViewBag.ApplicationUrl = ConfigurationManager.AppSettings["applicationUrl"].ToString();
    ViewBag.TemplateUrl = ConfigurationManager.AppSettings["templateUrl"].ToString();
}

@section styles {

    <link href="@ViewBag.TemplateUrl/theme/assets/global/plugins/datatables/plugins/bootstrap/dataTables.bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="@ViewBag.TemplateUrl/theme/assets/global/plugins/datatables/extensions/Scroller/css/dataTables.scroller.min.css" rel="stylesheet" type="text/css" />
    <link href="@ViewBag.TemplateUrl/theme/assets/global/plugins/datatables/extensions/ColReorder/css/dataTables.colReorder.min.css" rel="stylesheet" type="text/css" />
    <link href="@ViewBag.TemplateUrl/theme/assets/global/plugins/select2/select2.css" rel="stylesheet" type="text/css" />

    <link href="@ViewBag.ApplicationUrl/assets/admin/css/views/MovimentoImportacao/MovimentoImportacaoIndexStyle.css" rel="stylesheet" type="text/css" />
}

@section scripts {

    <script src="@ViewBag.TemplateUrl/theme/assets/global/plugins/datatables/all.min.js" type="text/javascript"></script>
    <script src="@ViewBag.TemplateUrl/theme/assets/global/plugins/select2/select2.min.js" type="text/javascript"></script>

    <script src="@ViewBag.ApplicationUrl/assets/admin/js/views/Conciliacao/ConciliacaoSharedScript.js" type="text/javascript"></script>

    <script src="@ViewBag.ApplicationUrl/assets/admin/js/views/MovimentoImportacao/MovimentoImportacaoIndexScript.js" type="text/javascript"></script>

    <script>
        jQuery(document).ready(function () {
            MovimentoImportacaoIndexScript.init();
        });
    </script>
}

<div class="row">
    <div class="col-md-12">
        <div class="portlet box grey">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-globe"></i>Listagem
                </div>
                <div class="actions">
                    <a id="btnRefresh" href="#" class="btn btn-circle bg-blue-steel btn-sm">
                        <i class="fa fa-refresh"></i>
                    </a>
                    <div class="btn-group">
                        <a id="btnGroupRemove" class="btn btn-circle bg-blue-steel btn-sm" href="#" data-toggle="dropdown">
                            <i class="fa fa-trash"></i> <i class="fa fa-angle-down"></i>
                        </a>
                        <ul class="dropdown-menu pull-right" role="menu">
                            <li id="btnRemoveSelected">
                                <a href="#">
                                    <i class="fa fa-trash"></i> Remover selecionados
                                </a>
                            </li>
                            <li class="divider">
                            </li>
                            <li id="btnRemoveImportacao">
                                <a href="#">
                                    <i class="fa fa-trash"></i> Remover importação
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="portlet-body">
                <div class="table-toolbar">
                    <div class="btn-group">
                        <label class="col-md-4 control-label">Importações</label>
                        <div class="col-md-8">
                            <input id="cmbImportacoes" name="cmbImportacoes" type="text" class="form-control" style="width:200px;"/>
                        </div>
                    </div>
                    <div class="btn-group">
                        <label class="col-md-4 control-label">Tipo transação</label>
                        <div class="col-md-8">
                            <select id="cmbTipoTransacao" name="cmbTipoTransacao" class="form-control select2me" data-placeholder="Selecione...">
                                <option value=""></option>
                                <option value="0">Crédito</option>
                                <option value="1">Débito</option>
                            </select>
                        </div>
                    </div>
                </div>
                <table class="table table-striped table-bordered table-hover table-full-width" id="dataTable">
                    <thead>
                        <tr>
                            <th class="table-checkbox"></th>
                            <th></th>
                            <th style="text-align: center; width:140px;">Data</th>
                            <th>Histórico</th>
                            <th style="text-align: right; width:130px;">Conciliado (%)</th>
                            <th style="text-align: right; width:130px;">Valor (R$)</th>
                            <th class="actionColumn"></th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>