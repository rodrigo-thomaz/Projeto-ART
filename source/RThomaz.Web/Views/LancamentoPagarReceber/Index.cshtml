@using System.Configuration

@{
    Layout = "~/Views/Shared/_LayoutAuthenticated.cshtml"; 
    ViewBag.ApplicationUrl = ConfigurationManager.AppSettings["applicationUrl"].ToString();
    ViewBag.TemplateUrl = ConfigurationManager.AppSettings["templateUrl"].ToString();
}

@section styles {

    <link href="@ViewBag.TemplateUrl/theme/assets/global/plugins/datatables/plugins/bootstrap/dataTables.bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="@ViewBag.TemplateUrl/theme/assets/global/plugins/datatables/extensions/Scroller/css/dataTables.scroller.min.css" rel="stylesheet" type="text/css" />
    <link href="@ViewBag.TemplateUrl/theme/assets/global/plugins/datatables/extensions/ColReorder/css/dataTables.colReorder.min.css" rel="stylesheet" type="text/css" />
    <link href="@ViewBag.TemplateUrl/theme/assets/global/plugins/select2/select2.css" rel="stylesheet" type="text/css" />

    <link href="@ViewBag.ApplicationUrl/assets/admin/css/views/LancamentoPagarReceber/LancamentoPagarReceberIndexStyle.css" rel="stylesheet" type="text/css" />
}

@section scripts {

    <script src="@ViewBag.TemplateUrl/theme/assets/global/plugins/datatables/all.min.js" type="text/javascript"></script>
    <script src="@ViewBag.TemplateUrl/theme/assets/global/plugins/select2/select2.min.js" type="text/javascript"></script>
        
    <script src="@ViewBag.ApplicationUrl/assets/global/js/dataTableHelper.js" type="text/javascript"></script>

    <script src="@ViewBag.ApplicationUrl/assets/admin/js/views/Conta/ContaSummaryScript.js" type="text/javascript"></script>

    <script src="@ViewBag.ApplicationUrl/assets/admin/js/views/Transferencia/TransferenciaDetailScript.js" type="text/javascript"></script>
    <script src="@ViewBag.ApplicationUrl/assets/admin/js/views/LancamentoPagarReceber/LancamentoPagarReceberIndexScript.js" type="text/javascript"></script>

    <script>
        jQuery(document).ready(function () {
            LancamentoPagarReceberIndexScript.init();
        });
    </script>
    
}

<div id="divContaSummary">
</div>

<div class="row">    
    <div class="col-md-12">
        <div class="portlet box grey">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-globe"></i>Listagem
                </div>
                <div class="actions">
                    <div class="btn-group">
                        <a class="btn btn-circle bg-blue-steel btn-sm" href="#" data-toggle="dropdown">
                            <i class="fa fa-plus"></i> Novo <i class="fa fa-angle-down"></i>
                        </a>
                        <ul class="dropdown-menu pull-right" role="menu">
                            <li>
                                <a href="/LancamentoPagarReceber/Detail/0/1">
                                    <i class="fa fa-plus"></i> Conta a pagar
                                </a>
                            </li>
                            <li>
                                <a href="/LancamentoPagarReceber/Detail/0/0">
                                    <i class="fa fa-plus"></i> Conta a receber
                                </a>
                            </li> 
                            <li class="divider">
                            </li>
                            <li>
                                <a href="/Transferencia/Detail/0">
                                    <i class="fa fa-plus"></i> Transferência
                                </a>
                            </li>  
                        </ul>
                    </div>
                    <a id="btnRefresh" href="#" class="btn btn-circle bg-blue-steel btn-sm">
                        <i class="fa fa-refresh"></i>
                    </a>
                </div>
            </div>
            <div class="portlet-body">
                <div class="table-toolbar">                                        
                    <div class="btn-group">
                        <label class="col-md-4 control-label">Períodos</label>
                        <div class="col-md-8">
                            <select id="cmbPeriodos" name="cmbPeriodos" class="form-control" style="width:160px;"></select>
                        </div>
                    </div>
                    <div class="btn-group saldoAnterior">
                        <label class="col-md-6 control-label">Saldo anterior (R$)</label>
                        <div class="col-md-6">
                            <input type="text" readonly id="txtSaldoAnterior" name="txtSaldoAnterior" class="form-control" style="width:160px; text-align:right;"/>
                        </div>
                    </div>                    
                </div>
                <table class="table table-striped table-bordered table-hover table-full-width" id="dataTable">
                    <thead>
                        <tr>
                            <th></th>
                            <th></th>
                            <th style="text-align: center; width:140px;">Vencimento</th>                            
                            <th>Histórico</th>
                            <th>Favorecido</th>                            
                            <th style="text-align: right; width:130px;">Valor (R$)</th>
                            <th style="text-align: right; width:130px;">Saldo (R$)</th>
                            <th class="actionColumn"></th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>