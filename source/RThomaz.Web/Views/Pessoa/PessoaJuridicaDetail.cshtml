@using System.Configuration

@{
    Layout = "~/Views/Shared/_LayoutAuthenticated.cshtml";
    ViewBag.ApplicationUrl = ConfigurationManager.AppSettings["applicationUrl"].ToString();
    ViewBag.TemplateUrl = ConfigurationManager.AppSettings["templateUrl"].ToString();
    ViewBag.GoogleWebAppApiKey = ConfigurationManager.AppSettings["Google.WebAppApiKey"].ToString();
}

@section styles {

    <link href="@ViewBag.TemplateUrl/theme/assets/global/plugins/bootstrap-summernote/summernote.css" rel="stylesheet" type="text/css" />
    <link href="@ViewBag.TemplateUrl/theme/assets/global/plugins/select2/select2.css" rel="stylesheet" type="text/css" />
    <link href="@ViewBag.TemplateUrl/theme/assets/global/plugins/typeahead/typeahead.css" rel="stylesheet" type="text/css" />

    <link href="@ViewBag.ApplicationUrl/assets/admin/css/views/Pessoa/PessoaJuridicaDetailStyle.css" rel="stylesheet" type="text/css" />

}

@section scripts {

    <script src="@ViewBag.TemplateUrl/theme/assets/global/plugins/jquery-validation/js/jquery.validate.min.js" type="text/javascript"></script>
    <script src="@ViewBag.TemplateUrl/theme/assets/global/plugins/jquery-validation/js/additional-methods.min.js" type="text/javascript"></script>
    <script src="@ViewBag.TemplateUrl/theme/assets/global/plugins/jquery-validation/js/localization/messages_pt_BR.min.js" type="text/javascript"></script>
    <script src="@ViewBag.TemplateUrl/theme/assets/global/plugins/bootstrap-summernote/summernote.min.js" type="text/javascript"></script>
    <script src="@ViewBag.TemplateUrl/theme/assets/global/plugins/select2/select2.min.js" type="text/javascript"></script>
    <script src="@ViewBag.TemplateUrl/theme/assets/global/plugins/jquery-inputmask/jquery.inputmask.bundle.min.js" type="text/javascript"></script>
    <script src="@ViewBag.TemplateUrl/theme/assets/global/plugins/typeahead/handlebars.min.js" type="text/javascript"></script>
    <script src="@ViewBag.TemplateUrl/theme/assets/global/plugins/typeahead/typeahead.bundle.min.js" type="text/javascript"></script>

    <script src="@ViewBag.ApplicationUrl/assets/global/js/validation.js" type="text/javascript"></script>

    <script src="https://maps.googleapis.com/maps/api/js?key=@ViewBag.GoogleWebAppApiKey&signed_in=false&libraries=places&callback=PessoaEnderecoDetailScript.initMap"
        async defer></script>

    <script src="@ViewBag.ApplicationUrl/assets/admin/js/views/Pessoa/PessoaJuridicaDetailScript.js" type="text/javascript"></script>
    <script src="@ViewBag.ApplicationUrl/assets/admin/js/views/Pessoa/PessoaEmailDetailScript.js" type="text/javascript"></script>
    <script src="@ViewBag.ApplicationUrl/assets/admin/js/views/Pessoa/PessoaEnderecoDetailScript.js" type="text/javascript"></script>
    <script src="@ViewBag.ApplicationUrl/assets/admin/js/views/Pessoa/PessoaHomePageDetailScript.js" type="text/javascript"></script>
    <script src="@ViewBag.ApplicationUrl/assets/admin/js/views/Pessoa/PessoaTelefoneDetailScript.js" type="text/javascript"></script>

    <script>
        jQuery(document).ready(function () {
            PessoaJuridicaDetailScript.init();
            PessoaEmailDetailScript.init(1);
            PessoaEnderecoDetailScript.init(1);
            PessoaHomePageDetailScript.init(1);
            PessoaTelefoneDetailScript.init(1);
        });
    </script>

}

<div class="row">
    <div class="col-md-12">
        <div id="divForm" class="portlet box grey">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-reorder"></i> Pessoa jurídica
                </div>
                <div class="tools">
                    <a href="#portlet-config" data-toggle="modal" class="config">
                    </a>
                    <a href="" class="reload">
                    </a>
                </div>
            </div>
            <div class="portlet-body form">
                <form id="formDetail" class="horizontal-form" role="form" action="#">
                    <div class="form-body">
                        <h3 class="form-section">Informações pessoais</h3>
                        <div id="custom-validate-error" class="alert alert-danger display-hide col-md-9 col-md-offset-3">
                            <button class="close" data-close="alert"></button>
                            <span>
                            </span>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Ativo</label>
                            <div class="col-md-9">
                                <div class="radio-list">
                                    <label>
                                        <input id="chkAtivoTrue" name="chkAtivo" type="radio" value="true" checked> Sim
                                    </label>
                                    <label>
                                        <input id="chkAtivoFalse" name="chkAtivo" type="radio" value="false" checked> Não
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Nome fantasia</label>
                            <div class="col-md-9">
                                <input id="txtNomeFantasia" name="txtNomeFantasia" type="text" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Razão social</label>
                            <div class="col-md-9">
                                <input id="txtRazaoSocial" name="txtRazaoSocial" type="text" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">CNPJ</label>
                            <div class="col-md-9">
                                <input id="txtCNPJ" name="txtCNPJ" type="text" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Inscrição estadual</label>
                            <div class="col-md-9">
                                <input id="txtInscricaoEstadual" name="txtInscricaoEstadual" type="text" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Inscrição municipal</label>
                            <div class="col-md-9">
                                <input id="txtInscricaoMunicipal" name="txtInscricaoMunicipal" type="text" class="form-control">
                            </div>
                        </div>

                        <h3 class="form-section">Email</h3>
                        <div class="row">
                            <div class="col-md-9">
                                <button id="btnNewEmail" class="btn btn-success" type="button"><i class="fa fa-plus fa-fw"></i></button>
                            </div>
                        </div>

                        <br />

                        <div id="divEmails">

                        </div>

                        <h3 class="form-section">Endereço</h3>
                        <div class="row">
                            <div class="col-md-9">
                                <button id="btnNewEndereco" class="btn btn-success" type="button"><i class="fa fa-plus fa-fw"></i></button>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Busca</label>
                                    <input id="txtBuscaEndereco" name="txtBuscaEndereco" type="text" placeholder="Encontre um endere&ccedil;o" class="form-control">
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <div id="map" style="height:500px;"></div>
                                </div>
                            </div>
                        </div>

                        <div id="divEnderecos">

                        </div>

                        <h3 class="form-section">Home Page</h3>
                        <div class="row">
                            <div class="col-md-9">
                                <button id="btnNewHomePage" class="btn btn-success" type="button"><i class="fa fa-plus fa-fw"></i></button>
                            </div>
                        </div>

                        <div id="divHomePages">

                        </div>

                        <h3 class="form-section">Telefone</h3>
                        <div class="row">
                            <div class="col-md-9">
                                <button id="btnNewTelefone" class="btn btn-success" type="button"><i class="fa fa-plus fa-fw"></i></button>
                            </div>
                        </div>

                        <div id="divTelefones">

                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label">Descrição</label>
                            <div class="col-md-9">
                                <textarea id="txtDescricao" name="txtDescricao" class="form-control minieditor"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="form-actions fluid">
                        <div class="col-md-offset-3 col-md-9">
                            <input type="submit" value="Salvar" class="btn blue">
                            <input id="btnCancelar" type="button" value="Cancelar" class="btn default">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>