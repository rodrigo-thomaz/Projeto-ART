@using System.Configuration

@{
    Layout = "~/Views/Shared/_LayoutAuthenticated.cshtml";
    ViewBag.ApplicationUrl = ConfigurationManager.AppSettings["applicationUrl"].ToString();
    ViewBag.TemplateUrl = ConfigurationManager.AppSettings["templateUrl"].ToString();
    ViewBag.GoogleWebAppApiKey = ConfigurationManager.AppSettings["Google.WebAppApiKey"].ToString();
}

@section styles {

    <link href="@ViewBag.TemplateUrl/theme/assets/global/plugins/bootstrap-summernote/summernote.css" rel="stylesheet" type="text/css" />
    <link href="@ViewBag.TemplateUrl/theme/assets/global/plugins/select2/select2.css" rel="stylesheet" type="text/css" />
    <link href="@ViewBag.TemplateUrl/theme/assets/global/plugins/typeahead/typeahead.css" rel="stylesheet" type="text/css" />
    <link href="@ViewBag.TemplateUrl/theme/assets/global/plugins/bootstrap-datepicker/css/datepicker3.css" rel="stylesheet" type="text/css" />
    <link href="@ViewBag.TemplateUrl/theme/assets/global/plugins/typeahead/typeahead.css" rel="stylesheet" type="text/css" />

    <link href="@ViewBag.ApplicationUrl/assets/admin/css/views/Pessoa/PessoaFisicaDetailStyle.css" rel="stylesheet" type="text/css" />

}

@section scripts {

    <script src="@ViewBag.TemplateUrl/theme/assets/global/plugins/jquery-validation/js/jquery.validate.min.js" type="text/javascript"></script>
    <script src="@ViewBag.TemplateUrl/theme/assets/global/plugins/jquery-validation/js/additional-methods.min.js" type="text/javascript"></script>
    <script src="@ViewBag.TemplateUrl/theme/assets/global/plugins/jquery-validation/js/localization/messages_pt_BR.min.js" type="text/javascript"></script>
    <script src="@ViewBag.TemplateUrl/theme/assets/global/plugins/bootstrap-summernote/summernote.min.js" type="text/javascript"></script>
    <script src="@ViewBag.TemplateUrl/theme/assets/global/plugins/select2/select2.min.js" type="text/javascript"></script>
    <script src="@ViewBag.TemplateUrl/theme/assets/global/plugins/jquery-inputmask/jquery.inputmask.bundle.min.js" type="text/javascript"></script>
    <script src="@ViewBag.TemplateUrl/theme/assets/global/plugins/typeahead/handlebars.min.js" type="text/javascript"></script>
    <script src="@ViewBag.TemplateUrl/theme/assets/global/plugins/typeahead/typeahead.bundle.min.js" type="text/javascript"></script>
    <script src="@ViewBag.TemplateUrl/theme/assets/global/plugins/bootstrap-datepicker/js/bootstrap-datepicker.js" type="text/javascript"></script>
    <script src="@ViewBag.TemplateUrl/theme/assets/global/plugins/bootstrap-datepicker/js/locales/bootstrap-datepicker.pt-BR.js" type="text/javascript"></script>
    <script src="@ViewBag.TemplateUrl/theme/assets/global/plugins/typeahead/handlebars.min.js" type="text/javascript"></script>
    <script src="@ViewBag.TemplateUrl/theme/assets/global/plugins/typeahead/typeahead.bundle.min.js" type="text/javascript"></script>

    <script src="@ViewBag.ApplicationUrl/assets/global/js/validation.js" type="text/javascript"></script>    

    <script src="@ViewBag.ApplicationUrl/assets/admin/js/views/CBOOcupacao/CBOOcupacaoSharedScript.js" type="text/javascript"></script>
    
    <script src="@ViewBag.ApplicationUrl/assets/admin/js/views/Pessoa/PessoaFisicaDetailScript.js" type="text/javascript"></script>
    <script src="@ViewBag.ApplicationUrl/assets/admin/js/views/Pessoa/PessoaEmailDetailScript.js" type="text/javascript"></script>
    <script src="@ViewBag.ApplicationUrl/assets/admin/js/views/Pessoa/PessoaEnderecoDetailScript.js" type="text/javascript"></script>
    <script src="@ViewBag.ApplicationUrl/assets/admin/js/views/Pessoa/PessoaHomePageDetailScript.js" type="text/javascript"></script>
    <script src="@ViewBag.ApplicationUrl/assets/admin/js/views/Pessoa/PessoaTelefoneDetailScript.js" type="text/javascript"></script>

    <script src="https://maps.googleapis.com/maps/api/js?key=@ViewBag.GoogleWebAppApiKey&signed_in=false&libraries=places&callback=PessoaEnderecoDetailScript.initMap"
        async defer></script>

    <script>
        jQuery(document).ready(function () {
            PessoaFisicaDetailScript.init();
            PessoaEmailDetailScript.init(0);
            PessoaEnderecoDetailScript.init(0);
            PessoaHomePageDetailScript.init(0);
            PessoaTelefoneDetailScript.init(0);
        });
</script>

}

<div class="row">
    <div class="col-md-12">
        <div id="divForm" class="portlet box grey">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-reorder"></i> Pessoa física
                </div>
                <div class="tools">
                    <a href="#portlet-config" data-toggle="modal" class="config">
                    </a>
                    <a href="" class="reload">
                    </a>
                </div>
            </div>
            <div class="portlet-body form">
                <form id="formDetail" class="horizontal-form" role="form" action="#">
                    <div class="form-body">
                        <h3 class="form-section">Informações pessoais</h3>
                        <div id="custom-validate-error" class="alert alert-danger display-hide col-md-9 col-md-offset-3">
                            <button class="close" data-close="alert"></button>
                            <span>
                            </span>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Ativo</label>
                            <div class="col-md-9">
                                <div class="radio-list">
                                    <label>
                                        <input id="chkAtivoTrue" name="chkAtivo" type="radio" value="true" checked> Sim
                                    </label>
                                    <label>
                                        <input id="chkAtivoFalse" name="chkAtivo" type="radio" value="false" checked> Não
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Primeiro nome</label>
                            <div class="col-md-9">
                                <input id="txtPrimeiroNome" name="txtPrimeiroNome" type="text" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Nome do meio</label>
                            <div class="col-md-9">
                                <input id="txtNomeDoMeio" name="txtNomeDoMeio" type="text" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Sobrenome</label>
                            <div class="col-md-9">
                                <input id="txtSobrenome" name="txtSobrenome" type="text" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Sexo</label>
                            <div class="col-md-9">
                                <div class="radio-list">
                                    <label>
                                        <input type="radio" name="optSexo" id="optSexo" value="0"> Masculino
                                    </label>
                                    <label>
                                        <input type="radio" name="optSexo" id="optSexo" value="1"> Feminino
                                    </label>                                    
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Estado civil</label>
                            <div class="col-md-9">
                                <select id="cmbEstadoCivil" name="cmbEstadoCivil" class="form-control">
                                    <option value=""></option>
                                    <option value="0">Solteiro(a)</option>
                                    <option value="1">Casado(a)</option>
                                    <option value="2">Divorciado(a)</option>
                                    <option value="3">Viúvo(a)</option>
                                    <option value="4">Separado(a)</option>
                                    <option value="5">Companheiro(a)</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">CPF</label>
                            <div class="col-md-9">
                                <input id="txtCPF" name="txtCPF" type="text" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">RG</label>
                            <div class="col-md-9">
                                <input id="txtRG" name="txtRG" type="text" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Órgão emissor</label>
                            <div class="col-md-9">
                                <input id="txtOrgaoEmissor" name="txtOrgaoEmissor" type="text" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Data de nascimento</label>
                            <div class="col-md-9">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </span>
                                    <input id="txtDataNascimento" name="txtDataNascimento" type="text" class="form-control">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Naturalidade</label>
                            <div class="col-md-9">
                                <input id="txtNaturalidade" name="txtNaturalidade" type="text" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Nacionalidade</label>
                            <div class="col-md-9">
                                <input id="txtNacionalidade" name="txtNacionalidade" type="text" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">CBO - Ocupação</label>
                            <div class="col-md-9">
                                <input id="cmbCBOOcupacao" name="cmbCBOOcupacao" type="text" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">CBO - Sinônimo</label>
                            <div class="col-md-9">
                                <input id="cmbCBOSinonimo" name="cmbCBOSinonimo" type="text" class="form-control">
                            </div>
                        </div>
                        
                        <h3 class="form-section">Email</h3>
                        <div class="row">
                            <div class="col-md-9">
                                <button id="btnNewEmail" class="btn btn-success" type="button"><i class="fa fa-plus fa-fw"></i></button>
                            </div>
                        </div>

                        <br />

                        <div id="divEmails">

                        </div>

                        <h3 class="form-section">Endereço</h3>
                        <div class="row">
                            <div class="col-md-9">
                                <button id="btnNewEndereco" class="btn btn-success" type="button"><i class="fa fa-plus fa-fw"></i></button>
                            </div>
                        </div>

                        <div class="row">                        
                            <div class="col-md-12">                        
                                <div class="form-group">                        
                                    <label>Busca</label>
                                    <input id="txtBuscaEndereco" name="txtBuscaEndereco" type="text" placeholder="Encontre um endere&ccedil;o" class="form-control">
                                </div>                                
                            </div>                            
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <div id="map" style="height:500px;"></div>
                                </div>
                            </div>
                        </div>                        

                        <div id="divEnderecos">

                        </div>

                        <h3 class="form-section">Home Page</h3>
                        <div class="row">
                            <div class="col-md-9">
                                <button id="btnNewHomePage" class="btn btn-success" type="button"><i class="fa fa-plus fa-fw"></i></button>
                            </div>
                        </div>

                        <div id="divHomePages">

                        </div>

                        <h3 class="form-section">Telefone</h3>
                        <div class="row">
                            <div class="col-md-9">
                                <button id="btnNewTelefone" class="btn btn-success" type="button"><i class="fa fa-plus fa-fw"></i></button>
                            </div>
                        </div>

                        <div id="divTelefones">

                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label">Descrição</label>
                            <div class="col-md-9">
                                <textarea id="txtDescricao" name="txtDescricao" class="form-control minieditor"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="form-actions fluid">
                        <div class="col-md-offset-3 col-md-9">
                            <input type="submit" value="Salvar" class="btn blue">
                            <input id="btnCancelar" type="button" value="Cancelar" class="btn default">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>