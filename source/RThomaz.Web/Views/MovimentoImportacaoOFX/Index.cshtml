@using System.Configuration

@{
    Layout = "~/Views/Shared/_LayoutAuthenticated.cshtml";
    ViewBag.ApplicationUrl = ConfigurationManager.AppSettings["applicationUrl"].ToString();
    ViewBag.TemplateUrl = ConfigurationManager.AppSettings["templateUrl"].ToString();
}

@section styles {

    <link href="@ViewBag.TemplateUrl/theme/assets/global/plugins/datatables/plugins/bootstrap/dataTables.bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="@ViewBag.TemplateUrl/theme/assets/global/plugins/datatables/extensions/Scroller/css/dataTables.scroller.min.css" rel="stylesheet" type="text/css" />
    <link href="@ViewBag.TemplateUrl/theme/assets/global/plugins/datatables/extensions/ColReorder/css/dataTables.colReorder.min.css" rel="stylesheet" type="text/css" />
    <link href="@ViewBag.TemplateUrl/theme/assets/global/plugins/select2/select2.css" rel="stylesheet" type="text/css" />

    <link href="@ViewBag.ApplicationUrl/assets/admin/css/views/MovimentoImportacaoOFX/MovimentoImportacaoOFXIndexStyle.css" rel="stylesheet" type="text/css" />
}

@section scripts {

    <script src="@ViewBag.TemplateUrl/theme/assets/global/plugins/datatables/all.min.js" type="text/javascript"></script>
    <script src="@ViewBag.TemplateUrl/theme/assets/global/plugins/select2/select2.min.js" type="text/javascript"></script>

    <script src="@ViewBag.ApplicationUrl/assets/admin/js/views/MovimentoImportacaoOFX/MovimentoImportacaoOFXIndexScript.js" type="text/javascript"></script>

    <script>
        jQuery(document).ready(function () {
            MovimentoImportacaoOFXIndexScript.init();
        });
    </script>

}

<div class="row">
    <div class="col-md-12">
        <div id="divForm" class="portlet box grey">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-reorder"></i> Importar arquivo OFX 2.0
                </div>
                <div class="tools">
                    <a href="#portlet-config" data-toggle="modal" class="config">
                    </a>
                    <a href="" class="reload">
                    </a>
                </div>
            </div>
            <div class="portlet-body form">
                <form id="formDetail" class="form-horizontal" role="form" action="#">
                    <div class="form-body">
                        <div class="form-group">
                            <label class="col-md-3 control-label">Arquivo</label>
                            <div class="col-md-9">
                                <input id="fileOfx" name="fileOfx" type="file">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Banco</label>
                            <div class="col-md-9">
                                <input id="txtBancoNome" name="txtBancoNome" type="text" class="form-control" readonly>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Conta</label>
                            <div class="col-md-9">
                                <input id="txtContaNome" name="txtContaNome" type="text" class="form-control" readonly>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Tipo de conta</label>
                            <div class="col-md-9">
                                <input id="txtTipoConta" name="txtTipoConta" type="text" class="form-control" readonly>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Data inícial</label>
                            <div class="col-md-9">
                                <input id="txtDataInicio" name="txtDataInicio" type="text" class="form-control" readonly>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Data final</label>
                            <div class="col-md-9">
                                <input id="txtDataFim" name="txtDataFim" type="text" class="form-control" readonly>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="portlet box grey">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-globe"></i>Movimentações
                </div>
            </div>
            <div class="portlet-body">                
                <table class="table table-striped table-bordered table-hover table-full-width" id="dataTable">
                    <thead>
                        <tr>
                            <th></th>
                            <th style="text-align: center; width:140px;">Data</th>
                            <th>Histórico</th>
                            <th style="text-align: right; width:130px;">Valor (R$)</th>
                            <th style="text-align: right; width:130px;">Existe</th>
                            <th class="actionColumn"></th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
            <div class="form-actions fluid">
                <div class="col-md-offset-3 col-md-9">
                    <input id="btnImportar" type="button" value="Importar" class="btn blue">
                    <input id="btnCancelar" type="button" value="Cancelar" class="btn default">
                </div>
            </div>
        </div>
    </div>
</div>