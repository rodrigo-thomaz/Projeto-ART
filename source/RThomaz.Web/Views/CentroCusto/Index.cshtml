@using System.Configuration

@{
    Layout = "~/Views/Shared/_LayoutAuthenticated.cshtml";
    ViewBag.ApplicationUrl = ConfigurationManager.AppSettings["applicationUrl"].ToString();
    ViewBag.TemplateUrl = ConfigurationManager.AppSettings["templateUrl"].ToString();
}

@section styles {

    <link href="@ViewBag.TemplateUrl/theme/assets/global/plugins/jstree/dist/themes/default/style.min.css" rel="stylesheet" type="text/css" />

    <link href="@ViewBag.ApplicationUrl/assets/admin/css/views/CentroCusto/CentroCustoIndexStyle.css" rel="stylesheet" type="text/css" />

}

@section scripts {

    <script src="@ViewBag.TemplateUrl/theme/assets/global/plugins/jstree/dist/jstree.min.js" type="text/javascript"></script>

    <script src="@ViewBag.ApplicationUrl/assets/admin/js/views/CentroCusto/CentroCustoIndexScript.js" type="text/javascript"></script>

    <script>
        jQuery(document).ready(function () {
            CentroCustoIndexScript.init();
        });
    </script>

}

<div class="row">
    <div class="col-md-12">
        <div class="portlet grey box">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-cogs"></i>Listagem
                </div>
                <div class="actions">
                    <a href="/CentroCusto/Detail/0/0" class="btn btn-circle bg-blue-steel btn-sm">
                        <i class="fa fa-plus"></i> Novo
                    </a>
                    <a id="btnRefresh" href="#" class="btn btn-circle bg-blue-steel btn-sm">
                        <i class="fa fa-refresh"></i>
                    </a>                    
                </div>
            </div>
            <div class="portlet-body">
                <div class="table-toolbar">
                    <div class="btn-group">
                        <div class="checkbox-list">
                            <label class="checkbox-inline">
                                <input type="checkbox" id="chkMostrarInativos"> Mostrar inativos
                            </label>
                        </div>
                    </div>   
                    <div class="btn-group pull-right">
                        <label class="col-md-3 control-label">Procurar:</label>
                        <input id="txtProcurar" type="text" aria-controls="dataTable" class="form-control input-medium input-inline">
                    </div>                     
                </div>
                <div id="jstreeCentroCusto"></div>
            </div>
        </div>     

    </div>
</div>