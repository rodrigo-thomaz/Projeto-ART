@using System.Configuration

@{
    Layout = "~/Views/Shared/_LayoutAuthenticated.cshtml";
    ViewBag.ApplicationUrl = ConfigurationManager.AppSettings["applicationUrl"].ToString();
    ViewBag.TemplateUrl = ConfigurationManager.AppSettings["templateUrl"].ToString();
}

@section styles {

    <link href="@ViewBag.TemplateUrl/theme/assets/global/plugins/fullcalendar/fullcalendar.min.css" rel="stylesheet" />

    <link href="@ViewBag.ApplicationUrl/assets/admin/css/views/Calendario/CalendarioIndexStyle.css" rel="stylesheet" type="text/css" />
}

@section scripts {

    <script src="@ViewBag.TemplateUrl/theme/assets/global/plugins/moment.min.js"></script>
    <script src="@ViewBag.TemplateUrl/theme/assets/global/plugins/fullcalendar/fullcalendar.min.js"></script>

    <script src="@ViewBag.ApplicationUrl/assets/admin/js/views/Calendario/CalendarioIndexScript.js" type="text/javascript"></script>

    <script>
        jQuery(document).ready(function () {
            CalendarioIndexScript.init();
        });
    </script>

}

<div class="row">
    <div class="col-md-12">
        <div class="portlet box green-meadow calendar">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gift"></i>Calendar
                </div>
            </div>
            <div class="portlet-body">
                <div class="row">
                    <div class="col-md-3 col-sm-12">
                        <!-- BEGIN DRAGGABLE EVENTS PORTLET-->
                        <h3 class="event-form-title">Draggable Events</h3>
                        <div id="external-events">
                            <form class="inline-form">
                                <input type="text" value="" class="form-control" placeholder="Event Title..." id="event_title" /><br />
                                <a href="javascript:;" id="event_add" class="btn default">
                                    Add Event
                                </a>
                            </form>
                            <hr />
                            <div id="event_box">
                            </div>
                            <label for="drop-remove">
                                <input type="checkbox" id="drop-remove" />remove after drop
                            </label>
                            <hr class="visible-xs" />
                        </div>
                        <!-- END DRAGGABLE EVENTS PORTLET-->
                    </div>
                    <div class="col-md-9 col-sm-12">
                        <div id="calendar" class="has-toolbar">
                        </div>
                    </div>
                </div>
                <!-- END CALENDAR PORTLET-->
            </div>
        </div>
    </div>
</div>